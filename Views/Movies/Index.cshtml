@model IEnumerable<Vidly_Correct.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("NEW MOVIE", "New", "Movies", new { @class="btn btn-primary btn-outline-dark" })

@if (Model.Count() == 0)
{
    <p>There are no movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.DateAdded.Value.ToString("d MMM yyy")</td>
            </tr>
            }
        </tbody>
    </table>
}